# 数据库配置
DATABASE_URL=/app/data/data.db

# 源站点配置
SOURCE_URL=https://example-tree-hole.com

# 爬虫配置
SYNC_ENABLED=false
MAX_RETRIES=3
REQUEST_TIMEOUT=30s
USER_AGENT=TreeHoleMirror/1.0
RATE_LIMIT_DELAY=1s

# 定时任务配置 (每30分钟执行一次)
SYNC_CRON=0 */30 * * * *

# 服务器配置
PORT=8080

# 安全配置
ALLOWED_ORIGINS=http://localhost:80,http://localhost:8080,https://treehole.club
RATE_LIMIT_ENABLED=true
CSRF_PROTECTION=true

# 隐私发帖配置
PROXY_ENABLED=false
PROXY_URL=http://127.0.0.1:7890

# 日志级别
LOG_LEVEL=info
